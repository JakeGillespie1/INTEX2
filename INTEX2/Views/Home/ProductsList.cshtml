@using Microsoft.AspNetCore.Identity
@using System.Security.Principal
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Product List Page";
}

@{
    string userRole = "Default"; // Default role

    if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            userRole = "Admin"; // Set role to Admin if user is an admin
        }
        else if (User.IsInRole("Member") || User.IsInRole("User"))
        {
            userRole = "User"; // Set role to User if user is a member or user
        }
    }
}

<vc:nav-bar-types user="@userRole"></vc:nav-bar-types>
@model List<Product>
<h1>Aurora Bricks Customers</h1>

<table class="table table-bordered">
    <thead classs="fw-bold">
        <br />
        <tr>
            <th>ProductId</th>
            <th>Name</th>
            <th>Year</th>
            <th>NumberOfParts</th>
            <th>Price</th>
            <th>ImageLink</th>
            <th>PrimaryColor</th>
            <th>SecondaryColor</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            @if (Model != null && Model.Any())
            {
                <tr>
                    <td>@x.ProductId</td>
                    <td>@x.Name</td>
                    <td>@x.Year</td>
                    <td>@x.NumParts</td>
                    <td>@x.Price</td>
                    <td style="max-width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@x.ImgLink</td>
                    <td>@x.PrimaryColor</td>
                    <td>@x.SecondaryColor</td>
                    <td style="max-width: 100px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@x.Description</td>
                    <td>
                        <a class="btn btn-info" asp-controller="Home" asp-action="EditProduct"
                           asp-route-id="@x.ProductId">Edit</a>
                    </td>

                    <td>
                        <a class="btn btn-dark" asp-controller="Home" asp-action="DeleteCustomer" asp-route-id="@x.ProductId"
                           style="color: white;">Delete</a>
                    </td>
                </tr>


            }   }
    </tbody>
</table>

<vc:footer-types></vc:footer-types>